{% extends "layout" %}

{% block content %}
<h2>Új film</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Film címe</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Film címe" value="{{old('name')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="description" name="description">{{old('description')}}</textarea>
      <span class="help-block">Leírás</span>
    </div>
  </div>
  <div class="form-group">
    <label for="hossz" class="col-lg-2 control-label">Hossz</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="hossz" name="hossz">{{old('hossz')}}</textarea>
      <span class="help-block">Leírás</span>
    </div>
  </div>
  <div class="form-group">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
    <div class="col-lg-10">
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == old('category_id') %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}