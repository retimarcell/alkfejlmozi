{% extends "layout" %}

{% block content %}

<h2>Helyfoglalas</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<div class="form-horizontal" action="{{ 'doreserveMovie' | route({id: movie.id}) }}" method="POST">
    <div class="form-group">
        <label for="checkboxes" class="col-lg-2 control-label">Válasszon helyet!</label>
        {% for seatrow in seats | batch(2) %}
            {% for seat in seatrow %}<li>
                {% if seat.movie_id == movie.id %}
                    {% if seat.taken == 0 %}
                        <label><input type="checkbox" name="{{seat.column + seat.row}}"/>{{seat.column}}</label>
                    {% else %}
                        <input type="checkbox" name="{{seat.column + seat.row}}"/>
                    {% endif %}
                {% endif %}
            </li>{% endfor %}
        {% endfor %}
    </div>
    <div class="form-group">
        <label for="nev" class="col-lg-2 control-label">Adja meg a nevét!</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="name" name="name">{{old('name')}}</textarea>
            <span class="help-block">Leírás</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Mégsem</button>
        <button type="submit" class="btn btn-primary">Küldés</button>
        </div>
    </div>
</div>

{% endblock %}